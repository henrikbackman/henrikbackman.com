extends layout

block content
  ul.projects
    - each project in data.projects
      li.item
        figure
          if project.url
            a(href='#{project.url}', rel='nofollow', target='_blank')
              img(src='#{data.imagePath}#{project.image}?v=#{project.added}', alt='#{project.title}')
          else
            img(src='#{data.imagePath}#{project.image}?v=#{project.added}', alt='#{project.title}')
          figcaption
            h2 #{project.title}
            p #{project.description}
              a(href='#{project.company.url}', rel='nofollow', target='_blank') #{project.company.name}
              if project.year
                , (#{project.year})
    li.contact
      h2 Contact me
      div(itemscope='', itemtype='http://schema.org/Person')
        meta(itemprop='name', content='#{data.title}')
        meta(itemprop='image', content='/henrikbackman.png')
        meta(itemprop='jobtitle', content='GUI developer')
        ul
          li(itemprop='telephone') #{data.about.phone}
          li
            a(href='mailto:#{data.about.email}')
              span(itemprop='email') #{data.about.email}
          - each social in data.about.social
            li
              a(href='#{social.url}', rel='nofollow', target='_blank') #{social.name}
        span(itemprop='address', itemscope='', itemtype='http://schema.org/PostalAddress')
          meta(itemprop='addressLocality', content='Stockholm')
          meta(itemprop='postalCode', content='10573')
          meta(itemprop='addressCountry', content='SE')
